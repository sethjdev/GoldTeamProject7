@model GoldTeamProject7.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
    
}
<div class="row">
    <img src="data:image;base64,@Convert.ToBase64String(Model.ProfileImage)" class="large-5 columns"  />
    <div class="large-7 columns">
        
        <h4>Change your account settings</h4>
        
        <div>
            
            @Model.FirstName
            @Model.LastName
            @Model.Email
            @Model.PhoneNumber
            @Model.Zipcode
        </div>

        <div>
            <dt>Phone Number:</dt>
            <dd>
                @(Model.PhoneNumber ?? "None") [
                @if (Model.PhoneNumber != null)
                {
                    @Html.ActionLink("Change", "AddPhoneNumber")
                    @: &nbsp;|&nbsp;
                    @Html.ActionLink("Remove", "RemovePhoneNumber")
                }
                else
                {
                    @Html.ActionLink("Add", "AddPhoneNumber")
                }
                ]
            </dd>
        </div>
        
        <div>
            <dt>Password:</dt>
            <dd>
                [
                @if (Model.HasPassword)
                {
                    @Html.ActionLink("Change your password", "ChangePassword")
                }
                else
                {
                    @Html.ActionLink("Create", "SetPassword")
                }
                ]
            </dd>
        </div>
        <p class="text-success">@ViewBag.StatusMessage</p>
            
    </div>
</div>

<div class="row">
    <div class="large-12 columns">

        <h4>Your Products</h4>

        @foreach (var item in Model.ApplicationUserProducts)
        {
            <table border="1">
                <tr>
                    <td><img src="data:image;base64,@Convert.ToBase64String(item.MainPhoto)"/></td>
                    <td>@item.Title</td>
                    <td>@item.Price</td>
                    <td>@item.Category</td>
                    <td>@item.Availability</td>
                    
                </tr>                
            </table>
            
        }

        </div>
    </div>
