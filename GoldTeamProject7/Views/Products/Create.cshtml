@model GoldTeamProject7.Models.Product
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Create";
}
<div class="row">
    @using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

            <h4 class="add-listing-title">Add a New Listing!</h4>
        
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="large-6 columns">

        <div class="field-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "field-label" })
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "field-input" } })
        </div>

        <div class="field-group">
            @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "field-label" })
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "field-input" } })
            </div>
        <div class="field-group photo-upload">
            @Html.LabelFor(model => model.MainPhoto, htmlAttributes: new { @class = "field-label" })
            <div class="col-md-10">
                <input type="file" name="ImageFile" id="file" />
            </div>
        </div>
        <div class="field-group">
            @Html.LabelFor(model => model.Availability, htmlAttributes: new { @class = "field-label" })
            @Html.EditorFor(model => model.Availability)
        </div>

    </div>
    <div class="large-6 columns">
        <div class="field-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "field-label" })
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "field-input" } })
        </div>
        <div class="field-group">
            @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "field-label" })
            @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "field-input" } })
        </div>
        <div class="field-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="jumbotron-btn" />
            </div>
        </div>
        </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
