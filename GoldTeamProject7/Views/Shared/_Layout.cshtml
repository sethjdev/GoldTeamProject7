<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Between</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,400,600,700,800' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Dosis:300,400,600,800' rel='stylesheet' type='text/css'>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?v=3.18&libraries=places&sensor=false"></script>
    <script type="text/javascript" src="~/Scripts/gsmapextend.js"></script>

    @Scripts.Render("~/bundles/modernizr")

</head>
<body onload="initialize()">
    <div id="navigation-bar">
        <div class="row">
            <div class="columns large-3">
                @Html.ActionLink("Between", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="columns large-4">
                <div class="nav-search">
                    @using (Html.BeginForm("Index", "Products", FormMethod.Get))
                    {
                        <input id="SearchString" name="SearchString" type="text" placeholder="Search Listings:" />
                        <button type="submit">
                            <span class="fa fa-search fa-2x"></span>
                        </button>
                    }
                </div>
            </div>
            <div class="columns large-5">
                @Html.Partial("_LoginPartial")
            </div>

            <div class="new-message-alert" id="msg-alrt"><a href="/Manage">NEW <span class="fa fa-envelope"></span></a></div>
            @if (User.Identity.Name == "seth.johnson0126@gmail.com")
            {
                <a href="/home/admindashboard" class="admin-button">Admin Dashboard</a>
            }
        </div>
    </div>
    <div style="height: 100px" ;width:100%"></div>
    <div class="container body-content">
        @RenderBody()

        <footer>
            <div class="row">
                <div class="large-12 columns">
                    <p>&copy; @DateTime.Now.Year - Between</p>
                </div>
            </div>
        </footer>
        <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
        <script type="text/javascript" src="~/Scripts/app.js"></script>

        @Scripts.Render("~/bundles/bootstrap")
        <script src="~/Scripts/Masonry.js"></script>
        @RenderSection("scripts", required: false)
</body>
</html>

